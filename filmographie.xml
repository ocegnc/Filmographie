    <film annee="2023" visa="060708" nationalite="américain">
        <titre nom="The Marvels" />
        <exploitation>
            <dateSalle>8 novembre 2023</dateSalle>
            <nbEntrees>150064798</nbEntrees>
            <nbSalles>1500</nbSalles>
            <acteurs>
                <acteur ref="a8" nom="Larson" prenom="Brie" />
                <acteur ref="a9" nom="Thompson" prenom="Tessa" />
                <acteur ref="a10" nom="Lynch" prenom="Lashana" />
